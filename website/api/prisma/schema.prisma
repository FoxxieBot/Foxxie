generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Ban {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  provider    String   @default("Foxxie")
  reason      String
  moderatorId String
  createdAt   DateTime
  user        User     @relation(fields: [userId], references: [userId])
  userId      String
}

type UserAttributes {
  email String?
  location String?
  twitter String?
  github String?
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  userId   String
  pronouns Int    @default(0)
  whitelisted Boolean @default(false)
  attributes UserAttributes
  bans     Ban[]
}
