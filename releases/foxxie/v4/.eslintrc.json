{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
	"rules": {
		"prefer-const": "error",
    "no-redeclare": "off",
    "no-use-before-define": "off",
    "no-string-throw": "off",
    "@typescript-eslint/no-namespace": "off",
    "@typescript-eslint/no-non-null-assertion": "off",
    "no-conditional-assignment": "off"
	},
    "extends": ["@ruffpuff/eslint-config-ruffpuff", "plugin:@typescript-eslint/recommended"]
  }