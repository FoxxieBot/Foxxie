{
	"additionalBranchPrefix": "{{parentDir}} -",
	"assigneesFromCodeOwners": true,
	"ignorePaths": ["**/releases/**"]
	"extends": [
		":dependencyDashboard",
		":semanticPrefixFixDepsChoreOthers",
		":ignoreModulesAndTests",
		"group:recommended",
		"workarounds:all"
	],
	"prConcurrentLimit": 5,
	"timezone": "America/Los_Angeles",
	"schedule": [
    		"after 5am",
    		"before 9am"
  	],
	"labels": [
		"Meta: Dependencies"
	],
	"npm": {
		"packageRules": [
			{
				"extends": "packages:apollographql",
				"groupName": "Apollo GraphQL packages"
			},
			{
				"matchPackagePatterns": [
					"@sapphire"
				],
				"groupName": "Sapphire Dependencies"
			},
			{
				"matchPackagePatterns": [
					"@influxdata"
				],
				"groupName": "InfluxDB Dependencies"
			},
			{
				"matchPackagePatterns": [
					"@ruffpuff"
				],
				"groupName": "Ruffpuff Dependencies"
			},
			{
				"matchPackagePatterns": [
					"@foxxie"
				],
				"groupName": "Foxxie Dependencies"
			}
		]
	}
}
