root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,ts,mjs}]
block_comment = *
block_comment_start = /*
block_comment_end = */
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.{md}]
tab_width = 4
trim_trailing_whitespace = false
