{
    "compilerOptions": {
        "outDir": "dist",
        "declaration": true,
        "allowJs": true,
        "target": "es5",
        "lib": [
            "ES2020",
            "es6",
            "dom",
            "es2017"
        ],
        "downlevelIteration": true,
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*",
        "./tests/**/*"
    ],
    "exclude": [
        ".eslintrc.js"
    ]
}